<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nit</th>
      <th>Contact name</th>
      <th>Contact num</th>
      <th>Bank name</th>
      <th>Bank account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.nit.empty? ? 'Sin información en tabla': supplier.nit %></td>
        <td><%= supplier.contact_name %></td>
        <td><%= supplier.contact_num.empty? ? 'Sin información en tabla': supplier.contact_num %></td>
        <td><%= supplier.bank_name %></td>
        <td><%= supplier.bank_account.empty? ? 'Sin información en tabla' : supplier.bank_account %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @suppliers %>
<%= link_to 'New Supplier', new_supplier_path %>
